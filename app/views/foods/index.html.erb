<p id="notice"><%= notice %></p>

<h1>Foods</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Expiry date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.expiry_date %></td>
        <% if (food.expiry_date - Date.current).to_i > 0 %>
          <td>賞味期限まであと<%= (food.expiry_date - Date.current).to_i %>日</td>
        <% elsif (food.expiry_date - Date.current).to_i == 0 %>
          <td>本日賞味期限です</td>
        <% else %>
          <td>賞味期限から<%= (Date.current - food.expiry_date).to_i %>日過ぎています</td>
        <% end %>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'shared/search' %>

